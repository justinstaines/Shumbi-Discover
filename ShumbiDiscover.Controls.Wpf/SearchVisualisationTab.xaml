<UserControl x:Class="ShumbiDiscover.Controls.SearchVisualisationTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="buttonLeft" Grid.Column="1" Click="buttonLeft_Click" Width="32" Height="32" Visibility="Collapsed">
            <Path x:Name="glyphLeft" Data="M 0 5 L 6 10 L 6 0 Z" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
        <StackPanel x:Name="_items" Orientation="Horizontal"></StackPanel>
        <Button x:Name="buttonRight" Grid.Column="3" Click="buttonRight_Click" Width="32" Height="32" Visibility="Collapsed">
            <Path x:Name="glyphRight" Data="M 6 5 L 0 10 L 0 0 Z" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
    </StackPanel>
</UserControl>
