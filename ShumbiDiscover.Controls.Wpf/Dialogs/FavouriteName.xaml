<UserControl x:Class="ShumbiDiscover.Controls.Dialogs.FavouriteName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0" Grid.Row="0" x:Name="labelFavouriteName" VerticalAlignment="Center">Name</TextBlock>
        <TextBox Grid.Column="2" Grid.Row="0" x:Name="textFavouriteName" Width="250" Height="30"></TextBox>
    </Grid>
</UserControl>
