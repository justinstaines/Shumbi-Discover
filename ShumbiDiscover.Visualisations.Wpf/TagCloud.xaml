<UserControl x:Class="ShumbiDiscover.Visualisations.TagCloud"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="100,20,100,100">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonUpOneLevel" Grid.Row="0" Height="30" Width="200" MinWidth="100" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buttonUpOneLevel_Click" Visibility="Collapsed">
            <TextBlock x:Name="labelUpOneLevel">Up One Level</TextBlock>
        </Button>
        <ScrollViewer x:Name="scrollViewer" Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        </ScrollViewer>
    </Grid>
</UserControl>
